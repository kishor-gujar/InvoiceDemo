@model WebApplication11.Models.Order

<div class="panel-body">
    <table class="table table-striped table-responsive">
        <tbody>
            <tr>
                <td>Customer Name : @Model.Customer.Name </td>
                @*
                    <td>Address : @item.Address </td>*@
                <td>Order Date : @Model.Date</td>
            </tr>
            <tr>
                <td colspan="3">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Total</th>
                            </tr>
                            @{
                                decimal totalBill = 0;
                            }
                            @foreach (var product in Model.Products)
                            {
                                <tr>
                                    <td>@product.Product.Name</td>
                                    <td>@product.Qty</td>
                                    <td>@product.Product.Price</td>
                                    <td>@(product.Product.Price * product.Qty)</td>
                                </tr>
                                totalBill += (product.Product.Price * product.Qty);
                            }
                        </tbody>
                    </table>
                    <span class="pull-right" style="margin-right:100px;"><strong>Total Bill :  </strong> @totalBill</span>
                </td>
            </tr>
        </tbody>
    </table>
</div>